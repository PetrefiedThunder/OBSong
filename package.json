{
  "name": "toposonics",
  "version": "0.1.0",
  "private": true,
  "description": "Turn static photos or live camera input into rich musical landscapes",
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev:web": "turbo run dev --filter=@toposonics/web",
    "dev:mobile": "turbo run dev --filter=@toposonics/mobile",
    "dev:api": "turbo run dev --filter=@toposonics/api",
    "dev:all": "turbo run dev",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@toposonics/web",
    "build:mobile": "turbo run build --filter=@toposonics/mobile",
    "build:api": "turbo run build --filter=@toposonics/api",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.4",
    "turbo": "^1.12.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}

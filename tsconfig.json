{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "baseUrl": ".",
    "paths": {
      "@toposonics/api/*": ["apps/api/src/*"],
      "@toposonics/web/*": ["apps/web/src/*"],
      "@toposonics/mobile/*": ["apps/mobile/src/*"],
      "@toposonics/core-audio/*": ["packages/core-audio/src/*"],
      "@toposonics/core-image/*": ["packages/core-image/src/*"],
      "@toposonics/ui/*": ["packages/ui/src/*"],
      "@toposonics/types": ["packages/types/src"],
      "@toposonics/types/*": ["packages/types/src/*"]
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true
  },
  "exclude": ["node_modules", "dist", "build", ".next", ".turbo"]
}
